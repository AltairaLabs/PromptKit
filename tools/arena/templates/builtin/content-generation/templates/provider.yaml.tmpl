{{if eq .provider "mock"}}# yaml-language-server: $schema=https://promptkit.altairalabs.ai/schemas/v1alpha1/provider.json
apiVersion: promptkit.altairalabs.ai/v1alpha1
kind: Provider
metadata:
  name: mock

spec:
  id: mock-provider
  type: mock
  model: mock-model
  defaults:
    temperature: 0.8
    max_tokens: 2000
    top_p: 1.0
  additional_config:
    response: "Discover the power of AI-driven content creation. Transform your ideas into engaging content that resonates with your audience."
    delay_ms: 100
{{else if eq .provider "openai"}}# yaml-language-server: $schema=https://promptkit.altairalabs.ai/schemas/v1alpha1/provider.json
apiVersion: promptkit.altairalabs.ai/v1alpha1
kind: Provider
metadata:
  name: openai

spec:
  id: openai-gpt4o-mini
  type: openai
  model: gpt-4o-mini
{{else if eq .provider "claude"}}# yaml-language-server: $schema=https://promptkit.altairalabs.ai/schemas/v1alpha1/provider.json
apiVersion: promptkit.altairalabs.ai/v1alpha1
kind: Provider
metadata:
  name: claude

spec:
  id: claude-3-5-haiku
  type: anthropic
  model: claude-3-5-haiku-20241022
{{else if eq .provider "gemini"}}# yaml-language-server: $schema=https://promptkit.altairalabs.ai/schemas/v1alpha1/provider.json
apiVersion: promptkit.altairalabs.ai/v1alpha1
kind: Provider
metadata:
  name: gemini

spec:
  id: gemini-2-0-flash
  type: gemini
  model: gemini-2.0-flash-exp
{{end}}
