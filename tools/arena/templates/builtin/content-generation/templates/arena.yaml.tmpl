# yaml-language-server: $schema=https://promptkit.altairalabs.ai/schemas/v1alpha1/arena.json
apiVersion: promptkit.altairalabs.ai/v1alpha1
kind: Arena
metadata:
  name: {{.project_name}}

spec:
  prompt_configs:
    - id: blog-writer
      file: prompts/blog-writer.yaml
    - id: marketing-copy
      file: prompts/marketing-copy.yaml

  providers:
    {{- range .providers}}
    - file: providers/{{.}}.yaml
    {{- end}}

  scenarios:
    - file: scenarios/blog-post.yaml
    - file: scenarios/product-description.yaml
    - file: scenarios/social-media.yaml

  defaults:
    temperature: 0.8
    max_tokens: 2000
    seed: 42
    concurrency: 1
    output:
      dir: out
      formats: ["json", "html"]
