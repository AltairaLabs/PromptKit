apiVersion: promptkit.altairalabs.ai/v1alpha1
kind: Arena
metadata:
  name: {{.project_name}}

spec:
  prompt_configs:
    - id: assistant
      file: prompts/assistant.yaml

  providers:
    - file: providers/{{.provider}}.yaml

  scenarios:
    - file: scenarios/basic-test.yaml

  defaults:
    temperature: 0.7
    max_tokens: 1500
    seed: 42
    concurrency: 1
    output:
      dir: out
      formats: ["json", "html"]
