{{if eq .provider "mock"}}# yaml-language-server: $schema=https://promptkit.altairalabs.ai/schemas/v1alpha1/provider.json
apiVersion: promptkit.altairalabs.ai/v1alpha1
kind: Provider
metadata:
  name: mock

spec:
  id: mock-provider
  provider: mock
  config:
    response: "This is a mock response for testing."
    delay_ms: 100
{{else if eq .provider "openai"}}# yaml-language-server: $schema=https://promptkit.altairalabs.ai/schemas/v1alpha1/provider.json
apiVersion: promptkit.altairalabs.ai/v1alpha1
kind: Provider
metadata:
  name: openai

spec:
  id: openai-gpt4
  provider: openai
  model: gpt-4o-mini
  config:
    api_key: ${OPENAI_API_KEY}
{{else if eq .provider "claude"}}# yaml-language-server: $schema=https://promptkit.altairalabs.ai/schemas/v1alpha1/provider.json
apiVersion: promptkit.altairalabs.ai/v1alpha1
kind: Provider
metadata:
  name: claude

spec:
  id: claude-3-5-haiku
  provider: claude
  model: claude-3-5-haiku-20241022
  config:
    api_key: ${CLAUDE_API_KEY}
{{else if eq .provider "gemini"}}# yaml-language-server: $schema=https://promptkit.altairalabs.ai/schemas/v1alpha1/provider.json
apiVersion: promptkit.altairalabs.ai/v1alpha1
kind: Provider
metadata:
  name: gemini

spec:
  id: gemini-1.5-pro
  provider: gemini
  model: gemini-1.5-pro
  config:
    api_key: ${GEMINI_API_KEY}
{{end}}
