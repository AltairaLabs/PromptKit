# yaml-language-server: $schema=https://promptkit.altairalabs.ai/schemas/v1alpha1/arena.json
apiVersion: promptkit.altairalabs.ai/v1alpha1
kind: Arena
metadata:
  name: {{.project_name}}

spec:
  prompt_configs:
    - id: mcp-assistant
      file: prompts/mcp-assistant.prompt.yaml

  providers:
    {{- range .providers}}
    - file: providers/{{.}}.provider.yaml
    {{- end}}

  scenarios:
    - file: scenarios/mcp-basic.scenario.yaml
    - file: scenarios/mcp-multi-tool.scenario.yaml

  # Example MCP server configurations
  # Uncomment and configure based on your needs
  mcp_servers:
    - name: filesystem
      command: npx
      args:
        - "-y"
        - "@modelcontextprotocol/server-filesystem"
        - "/tmp"
      
    # - name: memory
    #   command: npx
    #   args:
    #     - "-y"
    #     - "@modelcontextprotocol/server-memory"

  defaults:
    temperature: 0.7
    max_tokens: 2000
    seed: 42
    concurrency: 1
    output:
      dir: out
      formats: ["json", "html"]
