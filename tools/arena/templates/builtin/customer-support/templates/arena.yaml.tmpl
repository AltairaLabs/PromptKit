# yaml-language-server: $schema=https://promptkit.altairalabs.ai/schemas/v1alpha1/arena.json
apiVersion: promptkit.altairalabs.ai/v1alpha1
kind: Arena
metadata:
  name: {{.project_name}}

spec:
  prompt_configs:
    - id: support-agent
      file: prompts/support-agent.prompt.yaml

  providers:
    {{- range .providers}}
    - file: providers/{{.}}.provider.yaml
    {{- end}}

  scenarios:
    - file: scenarios/basic-support.scenario.yaml
    - file: scenarios/product-inquiry.scenario.yaml
    - file: scenarios/complaint-handling.scenario.yaml
{{if .include_tools}}
  tools:
    - file: tools/search-knowledge-base.tool.yaml
    - file: tools/check-order-status.tool.yaml
{{end}}
  defaults:
    temperature: 0.7
    max_tokens: 1500
    seed: 42
    concurrency: 1
    output:
      dir: out
      formats: ["json", "html"]
