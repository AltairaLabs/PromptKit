# yaml-language-server: $schema=https://promptkit.altairalabs.ai/schemas/v1alpha1/scenario.json
apiVersion: promptkit.altairalabs.ai/v1alpha1
kind: Scenario
metadata:
  name: code-review

spec:
  id: review-code
  task_type: code
  description: "Test code review capabilities"
  
  turns:
    - role: user
      content: |
        Please review this Python code:
        
        def process_data(data):
            result = []
            for i in range(len(data)):
                if data[i] > 0:
                    result.append(data[i] * 2)
            return result
      assertions:
        - type: content_not_empty
          params: {}
          message: "Review should not be empty"
        - type: contains_any
          params:
            values: ["list comprehension", "pythonic", "enumerate"]
          message: "Should suggest Python best practices"
        - type: contains_any
          params:
            values: ["improve", "better", "consider", "could"]
          message: "Should provide constructive suggestions"
