# yaml-language-server: $schema=https://promptkit.altairalabs.ai/schemas/v1alpha1/scenario.json
apiVersion: promptkit.altairalabs.ai/v1alpha1
kind: Scenario
metadata:
  name: image-analysis

spec:
  id: analyze-image
  task_type: vision
  description: "Test image analysis and description capabilities"
  
  turns:
    - role: user
      content: "Describe this image in detail."
      media:
        - type: image
          source: url
          url: "https://upload.wikimedia.org/wikipedia/commons/thumb/3/3a/Cat03.jpg/240px-Cat03.jpg"
      assertions:
        - type: content_not_empty
          params: {}
          message: "Response should not be empty"
        - type: contains_any
          params:
            values: ["cat", "feline", "animal"]
          message: "Should identify the subject"
        - type: min_tokens
          params:
            min: 20
          message: "Description should be detailed"
