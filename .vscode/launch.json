{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Arena Media Test",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/tools/arena/cmd/promptarena",
            "args": [
                "run",
                "--config", "examples/arena-media-test/arena.yaml",
                "--scenario", "audio-transcription",
                "--provider", "gemini-flash",
                "-v"
            ],
            "cwd": "${workspaceFolder}",
            "env": {},
            "console": "integratedTerminal",
            "showLog": true,
            "stopOnEntry": false,
            "trace": "verbose"
        },
        {
            "name": "Debug Gemini Audio Output Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/runtime/providers/gemini",
            "args": [
                "-test.run",
                "TestDiagnostic_AudioModalityRawMessages",
                "-test.v",
                "-test.timeout",
                "60s"
            ],
            "buildFlags": "-tags=integration",
            "cwd": "${workspaceFolder}/runtime/providers/gemini",
            "env": {              
            },
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Debug Arena Customer Support INtegrated",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/tools/arena/cmd/promptarena",
            "args": [
                "run",
                "--config", "examples/customer-support-integrated/arena.yaml",        
                "--provider", "mock-tool-simulation",                
                "-v",
                "--scenario", "tool-test"
            ],
            "cwd": "${workspaceFolder}",
            "env": {},
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Debug Arena Integration Test",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/tools/arena/cmd/promptarena",
            "args": [
                "run",
                "--config", "integration-test/arena.yaml",
                "--mock-provider",
                "--mock-config", "integration-test/mock-config-with-errors.yaml", 
                "--out", "integration-test/output-debug-session",
                "--format", "json",
                "--ci",
                "-v",
                "--scenario", "failing-test-scenario"
            ],
            "cwd": "${workspaceFolder}/tools/arena",
            "env": {},
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Debug Arena - Simple",
            "type": "go",
            "request": "launch", 
            "mode": "debug",
            "program": "${workspaceFolder}/tools/arena/cmd/promptarena",
            "args": [
                "run",
                "--help"
            ],
            "cwd": "${workspaceFolder}/tools/arena",
            "console": "integratedTerminal"
        }
    ]
}