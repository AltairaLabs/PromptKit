{
    "sonarlint.connectedMode.project": {
        "connectionId": "altairalabs",
        "projectKey": "AltairaLabs_PromptKit"
    },
    // "sonarlint.rules": {
    //     "go:S1192": "off",
    //     "go:S1006": "off",
    //     "go:S1066": "off"
    // },
    "sonarlint.disableTelemetry": true,
    "sonarlint.analysisExcludePatterns": [
        "**/*_test.go",
        "**/test_*.go", 
        "**/tests/**",
        "**/examples/**",
        "**/docs/**",
        "**/*test*/**",
        "**/vendor/**",
        "**/bin/**"
    ],
    "sonarlint.testFilePattern": "**/*_test.go",
    "yaml.schemas": {
        "https://promptkit.altairalabs.ai/schemas/latest/arena.json": [
            "examples/**/config.arena.yaml",
            "examples/**/*.arena.yaml",
            "examples/**/arena.yaml"
        ],
        "https://promptkit.altairalabs.ai/schemas/latest/scenario.json": [
            "examples/**/*.scenario.yaml",
            "examples/**/scenarios/*.yaml"
        ],
        "https://promptkit.altairalabs.ai/schemas/latest/provider.json": [
            "examples/**/*.provider.yaml",
            "examples/**/providers/*.yaml"
        ],
        "https://promptkit.altairalabs.ai/schemas/latest/promptconfig.json": [
            "examples/**/*.prompt.yaml",
            "examples/**/prompts/*.yaml"
        ],
        "https://promptkit.altairalabs.ai/schemas/latest/tool.json": [
            "examples/**/*.tool.yaml",
            "examples/**/tools/*.yaml"
        ],
        "https://promptkit.altairalabs.ai/schemas/latest/persona.json": [
            "examples/**/*.persona.yaml",
            "examples/**/personas/*.yaml"
        ]
    },
    "yaml.schemaStore.enable": true,
    "yaml.validate": true,
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#149f38",
        "activityBar.background": "#149f38",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#d3c6f8",
        "activityBarBadge.foreground": "#15202b",
        "commandCenter.border": "#e7e7e799",
        "sash.hoverBorder": "#149f38",
        "statusBar.background": "#0e7228",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#149f38",
        "statusBarItem.remoteBackground": "#0e7228",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeBackground": "#0e7228",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#0e722899",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.color": "#0e7228"
}